<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/attendance"
        android:alpha="0.9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_mark_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Mark Attendance"
            android:textSize="30sp"
            android:textStyle="bold" />

    <EditText
        android:id="@+id/ed_Year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Enter Year" />

    <EditText
        android:id="@+id/ed_semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Semester" />


    <EditText
        android:id="@+id/ed_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Enter subject name" />

    <EditText
        android:id="@+id/ed_rollNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:hint="Enter Roll No" />

    <Button
        android:id="@+id/button_mark_attendance"
        android:layout_width="match_parent"
        android:shadowRadius="20"
        android:backgroundTint="#000000"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Mark Attendance" />
    </LinearLayout>

</LinearLayout>